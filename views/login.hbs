<div class="container mt-5">
        <!-- Outer Row -->
        <div class="row justify-content-center" >

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block">
                                <img class = 'w-100 h-100 rounded' src="images/img_login.jpg" ></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h3 logo">Chat Web</h1>
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <form method="post">
                                        <div>
                                            <hr>
                                            <div class="form-group">
                                                <input value="{{account.email}}" name="email" id="email" type = "email" class="form-control input-lg" placeholder="Email" autofocus onclick="clearErrorMessage()">
                                            </div>
                                            <div class="form-group">
                                                <input name="password" id="password" type="password" class="form-control input-lg" placeholder="Password" onclick="clearErrorMessage()">
                                            </div>
                                              {{#if flash}}
                                                <div class="form-group">
                                                  <div id="errorMessage" class="alert alert-{{flash.type}} alert-dismissible fade show" id="errorMessage">
                                                    {{!-- <button type="button" class="close" data-dismiss="alert">&times;</button> --}}
                                                    {{flash.message}}
                                                  </div>
                                                </div>
                                              {{/if}}
                                            <div class="form-group">                                        
                                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                                            </div> 
                                        </div>
                                            <hr>
                                            <p>Don't have any account? <a href="/register">Register now!</a></p>
                                    </form>
                                    <div class="form-group">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>                             
</div>