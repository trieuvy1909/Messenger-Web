<div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center" >

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div style="border-radius:20px" class="o-hidden border-0 shadow-lg my-5 bg-white">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block">
                                <img style="border-radius:20px 0px 0px 20px" height="615px" width="450px" src="images/register.jpg">
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5 shadow-lg">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Account Registration</h1>
                                    </div>
                                    <form method="post">
                                        <div>
                                            <hr>
                                            <div class="form-group">
                                                <label for="name">Your fullname</label>
                                                <input value="{{account.name}}" name="name" id="name" type = "text" class="form-control input-lg" placeholder="Fullname" autofocus onclick="clearErrorMessage()">
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Your email</label>
                                                <input value="{{account.email}}" name="email" id="email" type = "email" class="form-control input-lg" placeholder="Email" autofocus onclick="clearErrorMessage()">
                                            </div>
                                            <div class="form-group">
                                                <label for="password">Password</label>
                                                <input name="password" id="password" type="password" class="form-control input-lg" placeholder="Password" onclick="clearErrorMessage()">
                                            </div>
                                            <div class="form-group">
                                                <label for="password">Confirm Password</label>
                                                <input name="rePassword" id="rePassword" type="password" class="form-control input-lg" placeholder="Password" onclick="clearErrorMessage()">
                                            </div>
                                              {{#if flash}}
                                                <div class="form-group">
                                                  <div class="alert alert-{{flash.type}} alert-dismissible fade show">
                                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                    {{flash.message}}
                                                  </div>
                                                </div>
                                              {{/if}}
                                            <div class="form-group">                                        
                                                <button type="submit" class="btn btn-primary btn-block">Đăng kí</button>
                                            </div> 
                                        </div>
                                            <hr>
                                            <div class="form-group">
                                      <p>Do you already have an account?? <a href="/login">Login now!</a></p>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>                             
</div>